<%# locals: (title:) %>
<header class="bg-white shadow turbo-native:hidden">
  <div class="mx-auto max-w-7xl px-4 py-4 sm:py-6 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center">
      <div class="flex items-center space-x-4">
        <%= link_to root_path do %>
          <span class="sr-only">Maison Inspect</span>
          <%= inline_svg "logo.svg", class: "h-8 sm:h-10 w-auto text-gray-600" %>
        <% end %>
        <h1 class="text-xl sm:text-3xl font-bold leading-tight tracking-tight text-gray-900"><%= title %></h1>
        <%= content_for :header_navigation %>
      </div>
    </div>
  </div>
</header>
